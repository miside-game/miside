---
layout: base.njk
---

{# 获取当前语言 #}
{% set currentLang = "en" %}
{% for lang in ["zh", "ja", "ko", "fil", "vi", "id", "ms", "th", "ru", "uk", "de", "pt"] %}
  {% if page.url.startsWith("/" + lang + "/") %}
    {% set currentLang = lang %}
  {% endif %}
{% endfor %}

{# 获取当前页面的i18n数据 #}
{% if i18n[currentLang] %}
  {% set translations = i18n[currentLang] %}
{% else %}
  {% set translations = i18n["en"] %}
{% endif %}

{% set currentPage = page.url | replace("/" + currentLang + "/", "/") | replace("/blog/", "") | replace("/", "") %}
{% if currentPage %}
  {% set currentPage = currentPage %}
{% else %}
  {% set currentPage = "index" %}
{% endif %}

<nav class="h-10 text-xs md:text-md px-4 text-light font-black bg-gradient-to-l from-green to-red flex items-center">
    <a href="/" class="nav-link hover:text-yellow hover:underline hover:decoration-2 hover:underline-offset-8">Home</a>
    >
    <a href="/blogentry/" class="nav-link hover:text-yellow hover:underline hover:decoration-2 hover:underline-offset-8">Blog</a>
    >
    <a href="/blog/miside-walkthrough/" class="nav-link hover:text-yellow underline hover:decoration-2 hover:underline-offset-8">MiSide Walkthrough</a>
</nav>

<article class="p-4 md:p-8 bg-green">
    <div class="max-w-3xl mx-auto">
        <!-- Header -->
        <header class="mb-8 text-center">
            <h1 class="text-2xl md:text-3xl font-black text-light mb-4">
                {{ translations.pages[currentPage].articleTitle }}
            </h1>
            <p class="text-sm italic mb-6">Last Updated: {{ translations.pages[currentPage].date }}</p>
            <img src="{{ translations.pages[currentPage].media.url }}" 
                alt="{{ translations.pages[currentPage].media.alt }}" 
                title="{{ translations.pages[currentPage].media.alt }}"
                class="w-full md:w-1/2 max-w-3xl mx-auto rounded-lg shadow-lg mb-6 object-cover">
        </header>

        <!-- Content -->
        <div class="prose prose-invert mx-auto">
            <div class="bg-red bg-opacity-20 p-4 rounded-lg mb-8 text-[#ffc107]">
                <h3 class="text-lg font-bold mb-2">⚠️ Spoiler Warning</h3>
                <p class="text-sm opacity-75">
                    This walkthrough contains major spoilers for MiSide's story and gameplay. We recommend playing through the game first to experience it yourself.
                </p>
